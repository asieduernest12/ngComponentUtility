{
	"extends": "tslint:recommended",
	"linterOptions": {
		"exclude": [
			"test/index.ts",
			"test/test_files/**/*.ts"
		]
	},
	"rules": {
		"no-string-literal": false,
		"no-unused-expression": [
			true,
			"allow-fast-null-checks"
		],
		"strict-type-predicates": true,
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-pascal-case",
			"allow-leading-underscore"
		],
		"no-unused-variable": [
			true,
			"check-parameters",
			{
				"ignore-pattern": "^_"
			}
		],
		"indent": [
			false,
			"tabs",
			2
		],
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"max-line-length": [
			true,
			170
		],
		"object-literal-sort-keys": false,
		"trailing-comma": [
			false
		],
		"member-ordering": [
			false
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-type"
		],
		"arrow-parens": false,
		"ordered-imports": [
			false
		],
		"no-angle-bracket-type-assertion": false,
		"curly": [
			true,
			"ignore-same-line"
		]
	}
}